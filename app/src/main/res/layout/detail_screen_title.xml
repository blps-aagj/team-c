<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_recipe_screen_cardview_title"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_screen_title"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            tools:text="Margarita SuperDuper" />

        <TextView
            android:id="@+id/detail_recipe_screen_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_screen_title"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/category_label"
            app:layout_constraintEnd_toStartOf="@id/detail_recipe_screen_category_value" />

        <TextView
            android:id="@+id/detail_recipe_screen_category_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/detail_screen_title"
            app:layout_constraintStart_toEndOf="@id/detail_recipe_screen_category_label"
            tools:text="Vegetarian" />

        <TextView
            android:id="@+id/detail_recipe_screen_area_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_label"
            app:layout_constraintEnd_toStartOf="@id/detail_recipe_screen_area_value"
            app:layout_constraintStart_toEndOf="@id/detail_recipe_screen_category_value"
            app:layout_constraintTop_toBottomOf="@id/detail_screen_title" />

        <TextView
            android:id="@+id/detail_recipe_screen_area_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/detail_recipe_screen_area_label"
            app:layout_constraintTop_toBottomOf="@id/detail_screen_title"
            tools:text="Italian" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
